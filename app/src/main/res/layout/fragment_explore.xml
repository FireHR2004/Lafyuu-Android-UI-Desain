<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExploreFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/custom_input"
                    android:drawableStart="@drawable/custom_search_icon"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Search Product"
                    android:inputType="text"
                    android:paddingHorizontal="15sp"
                    android:paddingVertical="10sp"
                    android:textColor="#9098B1"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="15sp"
                    android:layout_marginTop="4sp"
                    android:layout_marginEnd="10sp"
                    android:layout_weight="1"
                    android:src="@drawable/custom_love_icon" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="4sp"
                    android:layout_marginEnd="10sp"
                    android:layout_weight="1"
                    android:src="@drawable/custom_notif_icon" />


            </LinearLayout>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:fontFamily="@font/poppins_bold"
                android:text="Man Fashion"
                android:textColor="#223263"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="25sp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="85sp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10sp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/man_shirt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/man_shirt" />

                    <TextView
                        android:id="@+id/txtManShirt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Man Shirt"
                        android:textAlignment="center"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="85sp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10sp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/man_equipment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/man_work_equipment" />

                    <TextView
                        android:id="@+id/txtManEquip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Man Wrok Equipment"
                        android:textAlignment="center"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="85sp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10sp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/man_tshirt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/man_tshirt" />

                    <TextView
                        android:id="@+id/txtManTShirt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Man T-Shirt"
                        android:textAlignment="center"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="85sp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10sp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/man_shoes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/man_shoes" />

                    <TextView
                        android:id="@+id/txtManShoes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Man Wrok Equipment"
                        android:textAlignment="center"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="25sp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="85sp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10sp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/man_pants"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/man_pants" />

                    <TextView
                        android:id="@+id/txtManPants"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Man Pants"
                        android:textAlignment="center"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="85sp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10sp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/man_underwear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/man_underwear" />

                    <TextView
                        android:id="@+id/txtManUnderwear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Man Underwear"
                        android:textAlignment="center"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:textSize="14sp"
                android:textColor="#223263"
                android:layout_marginBottom="25sp"
                android:text="Woman Fathion" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="25sp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="85sp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10sp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/dress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dress" />

                    <TextView
                        android:id="@+id/txtDress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Dress"
                        android:textAlignment="center"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="85sp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10sp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/woman_tshirt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/woman_tshirt" />

                    <TextView
                        android:id="@+id/txtWomanTShirt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Woman T-Shirt"
                        android:textAlignment="center"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="85sp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10sp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/woman_pants"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/woman_pants" />

                    <TextView
                        android:id="@+id/txtWomanPants"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Woman Pants"
                        android:textAlignment="center"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="85sp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10sp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/skirt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/skirt" />

                    <TextView
                        android:id="@+id/txtSkirt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Man Wrok Equipment"
                        android:textAlignment="center"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="85sp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10sp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/woman_bag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/woman_bag" />

                    <TextView
                        android:id="@+id/txtWomanBag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Woman Pants"
                        android:textAlignment="center"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="85sp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10sp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/high_heels"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/high_heels" />

                    <TextView
                        android:id="@+id/txtHighHeels"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Man Wrok Equipment"
                        android:textAlignment="center"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="85sp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10sp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/bikini"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bikini" />

                    <TextView
                        android:id="@+id/txtBikini"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Man Wrok Equipment"
                        android:textAlignment="center"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>